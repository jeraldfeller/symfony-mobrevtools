                                                            <div class="col-lg-12 col-md-12">
                                                                <h4>Group Name</h4>
                                                                    <input type="text" id="groupName" class="form-control">
                                                            </div>
                                                         </div>
                                                    </div>
                                                    <div class="modal-footer">

                                                        <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
