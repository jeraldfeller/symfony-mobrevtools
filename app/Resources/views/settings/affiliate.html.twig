    'AppBundle:Navmenu:getNavmenu'
    )) }}
{% endblock %}
{% block body %}
    <h1 class="page-title"> {{ page }}

    </h1>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="icon-home"></i>
                <a href="/">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>

            <li>
                <span>Global Settings</span>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <span>{{ page }}</span>
            </li>

        </ul>
        <div class="page-toolbar">
            <div class="btn-group pull-right">
                <button type="button" class="btn btn-fit-height grey-salt dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true"> Actions
                    <i class="fa fa-angle-down"></i>
                </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li>
                        <a href="#">
                            <i class="icon-bell"></i> Action</a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="icon-shield"></i> Another action</a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="icon-user"></i> Something else here</a>
                    </li>
                    <li class="divider"> </li>
                    <li>
                        <a href="#">
                            <i class="icon-bag"></i> Separated link</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet light">
                <div class="portlet-title">


                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-4 col-xs-12">
                                <div class="caption font-dark">
                                    <button class="btn blue" data-toggle="modal" data-target="#modalAddNetwork"><i class="fa fa-plus"></i> Add Affiliate Network</button>
                                        <div class="modal fade" id="modalAddNetwork" tabindex="-1" role="basic" aria-hidden="true">
                                            <div class="modal-dialog modal-md">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title"><i class="fa fa-network"></i> Add Affiliate Network</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12">
                                                                <h4>Network Name</h4>
                                                                    <input type="text" id="affiliateNetworkName" class="form-control">
                                                                <h4>User ID</h4>
                                                                    <input type="text" id="affiliateId" class="form-control">
                                                                <h4>API Url</h4>
                                                                    <input type="text" id="apiUrl" class="form-control">
                                                                <h4>API Key</h4>
                                                                    <input type="text" id="apiKey" class="form-control">
                                                            </div>
                                                         </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                                                        <button type="button" id="addNetworkBtn" class="btn blue ladda-button spinnerBtn" data-style="expand-right" data-size="l"><span class="ladda-label"><i class="fa fa-plus"></i> Add</span></button>
                                                    </div>
                                                </div>
                                                <!-- /.modal-content -->
                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>


                                        <div class="modal fade" id="modalEditNetwork" tabindex="-1" role="basic" aria-hidden="true">
                                            <div class="modal-dialog modal-md">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title"><i class="fa fa-edit"></i> Edit Affiliate Network</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12">
                                                                <h4>Network Name</h4>
                                                                    <input type="text" id="editAffiliateNetworkName" class="form-control">
                                                                <h4>User ID</h4>
                                                                    <input type="text" id="editAffiliateId" class="form-control">
                                                                <h4>API Url</h4>
                                                                    <input type="text" id="editApiUrl" class="form-control">
                                                                <h4>API Key</h4>
                                                                    <input type="text" id="editApiKey" class="form-control">
                                                            </div>
                                                         </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="hidden" id="editAffiliateNetworkId" class="form-control">
                                                        <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                                                        <button type="button" id="editNetworkBtn" class="btn blue ladda-button spinnerBtn" data-style="expand-right" data-size="l"><span class="ladda-label"><i class="fa fa-edit"></i> Update</span></button>
                                                    </div>
                                                </div>
                                                <!-- /.modal-content -->
                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>


                                        <div class="modal fade" id="modalDeleteNetwork" tabindex="-1" role="basic" aria-hidden="true">
                                            <div class="modal-dialog modal-sm">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title"><i class="fa fa-warning"></i> Warning</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-lg-12 col-md-12">
                                                                <p>Are you sure do you want to remove <b><span id="networkDeleteName"></span></b>?</p>
                                                            </div>
                                                         </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <input type="hidden" id="deleteAffiliateNetworkId" class="form-control">
                                                        <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                                                        <button type="button" id="deleteNetworkBtn" class="btn blue ladda-button spinnerBtn" data-style="expand-right" data-size="l"><span class="ladda-label"><i class="fa fa-times"></i> Remove</span></button>
                                                    </div>
                                                </div>
                                                <!-- /.modal-content -->
                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>




                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                    <div class="portlet-body">

                        <div class="row">

                            <div class="col-lg-12">

                                    <table class="table table-striped table-bordered table-hover dt-responsive table-checkable order-column table-header-fixed" width="100%" id="datatable-responsive">
                                        <thead>
                                        <tr>
                                            <th>Network Name</th>
                                            <th>User Id</th>
                                            <th>API Url </th>
                                            <th>API Key </th>
                                            <th>Action</th>
                                        </tr>
                                        </thead>

                                        <tbody>
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        Ladda.bind( '.spinnerBtn' );
    </script>
    <script>
        $(document).on('ready', function() {




            var fixedHeaderOffset = 0;
            if (App.getViewPort().width < App.getResponsiveBreakpoint('md')) {
                if ($('.page-header').hasClass('page-header-fixed-mobile')) {
                    fixedHeaderOffset = $('.page-header').outerHeight(true);
                }
            } else if ($('.page-header').hasClass('navbar-fixed-top')) {
                fixedHeaderOffset = $('.page-header').outerHeight(true);
            } else if ($('body').hasClass('page-header-fixed')) {
                fixedHeaderOffset = 64; // admin 5 fixed height
            }
            var table = $('#datatable-responsive');
            var oTable = $('#datatable-responsive').DataTable({
                fixedHeader: {
                    header: true,
                    headerOffset: fixedHeaderOffset
                },
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": '/ajax/get-affiliate-network',
                responsive: {
                    details: {}
                },
                "iDisplayLength": 20,
                "lengthMenu": [
                    [20, 500, 1000, -1],
                    [20, 500, 1000, "All"] // change per page values here
                ],
                "order": [[0, "asc"]],
                "columnDefs": [
                    {"width": "30%", "targets": 0},
                    {"width": "30%", "targets": 1},
                    {"width": "30%", "targets": 2},
                    {"width": "10%", "targets": 0},
                    {className: "align-left", "targets": 0}
                ]
            });


            $('#addNetworkBtn').click(function(){
                $btn = $(this)[0]
                $data = {
                    networkName: $('#affiliateNetworkName').val(),
                    affiliateId: $('#affiliateId').val(),
                    apiUrl: $('#apiUrl').val(),
                    apiKey: $('#apiKey').val()
                }

                addNetwork($btn, $data);

            });


            $('#editNetworkBtn').click(function(){
                $btn = $(this)[0]
                $data = {
                    id: $('#editAffiliateNetworkId').val(),
                    networkName: $('#editAffiliateNetworkName').val(),
                    affiliateId: $('#editAffiliateId').val(),
                    apiUrl: $('#editApiUrl').val(),
                    apiKey: $('#editApiKey').val()
                }

                editNetwork($btn, $data);

            });


            $('#deleteNetworkBtn').click(function(){
                $btn = $(this)[0]
                deleteNetwork($btn, $('#deleteAffiliateNetworkId').val());

            });

        });




        function pushData(elem){
            $action = $(elem).data('action');
            $id = $(elem).data('id');
            $name = $(elem).data('name');
            $affiliateId = $(elem).data('affiliate-id');
            $apiKey = $(elem).data('api-key');
            $apiUrl = $(elem).data('api-url');


            if($action == 'edit'){
                $('#editAffiliateNetworkId').val($id);
                $('#editAffiliateNetworkName').val($name);
                $('#editAffiliateId').val($affiliateId);
                $('#editApiKey').val($apiKey);
                $('#editApiUrl').val($apiUrl);
            }else if($action == 'delete'){
                $('#deleteAffiliateNetworkId').val($id);
                $('#networkDeleteName').html($name);
            }

        }


    </script>

    <!-- AJAX CALLS -->
    <script src="{{ asset('assets/ajax/global-settings/ajax-global-settings.js') }}" type="text/javascript"></script>
    <!-- END AJAX CALLS -->
{% endblock %}
